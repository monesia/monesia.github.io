---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
    <nav>
        <h2><a href="/">{SITE_TITLE}</a></h2>
        <div class="internal-links">
            <HeaderLink href="/">Home</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            <HeaderLink href="/about">About</HeaderLink>
        </div>
        <div class="social-links">
            {/* Link ke IDX.co.id */}
            <a href="https://www.idx.co.id" target="_blank" rel="noopener noreferrer" class="external-link-item">
                <span class="sr-only">Kunjungi IDX (Bursa Efek Indonesia)</span>
                <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" fill="currentColor">
                  <path d="M1.5 14V2.5h1V14zm3 0V6.5h1V14zm3 0V9.5h1V14zm3 0V5.5h1V14zm3 0V11.5h1V14zM0 15.5V14H.5v.5c0 .28.22.5.5.5h14c.28 0 .5-.22.5-.5V14h.5v1.5c0 .83-.67 1.5-1.5 1.5h-14C.67 17 0 16.33 0 15.5z"/>
                </svg>
            </a>
            {/* Link ke KSEI */}
            <a href="https://www.ksei.co.id" target="_blank" rel="noopener noreferrer" class="external-link-item">
                <span class="sr-only">Kunjungi KSEI (Kustodian Sentral Efek Indonesia)</span>
                <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" fill="currentColor">
                  <path d="M4 2.5v11h1.5V9.207l3.646 3.647.708-.708L6.207 8.5l3.647-3.646-.708-.708L5.5 7.293V2.5H4zm5.576 0L12.5 8.012V2.5h-2.924zM9.5 3.207L11.793 5.5H9.5V3.207zm3 5.5L9.576 14H12.5V8.707zM9.5 13.5V11.207L11.793 13.5H9.5z"/>
                </svg>
            </a>
            {/* Link ke TradingView */}
            <a href="https://www.tradingview.com" target="_blank" rel="noopener noreferrer" class="external-link-item">
                <span class="sr-only">Kunjungi TradingView</span>
                <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="2,12 5,7 8,10 11,4 14,8" />
                  <line x1="1" y1="15" x2="15" y2="15" stroke-width="1"/>
                </svg>
            </a>
        </div>
    </nav>
</header>
<style>
    header {
        margin: 0;
        padding: 0 1em;
        background: white;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
    h2 {
        margin: 0;
        font-size: 1em;
    }

    h2 a,
    h2 a.active {
        text-decoration: none;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    nav a { /* Ini berlaku untuk link internal dan eksternal jika tidak dioverride */
        padding: 1em 0.5em;
        color: var(--black);
        border-bottom: 4px solid transparent;
        text-decoration: none;
        font-weight: 500; 
    }
    nav a.active { /* Ini untuk HeaderLink internal */
        text-decoration: none;
        border-bottom-color: var(--accent);
    }
    .social-links { 
        display: flex;
        align-items: center; /* Menyelaraskan ikon secara vertikal */
        gap: 0.75em; /* Memberi sedikit jarak antar ikon, bisa disesuaikan */
    }
    .social-links a.external-link-item { 
        padding: 0.5em; /* Mengurangi padding default dari nav a agar ikon tidak terlalu jauh */
        line-height: 0; /* Membantu agar ikon lebih rapi jika ada sisa spasi vertikal */
    }

    .social-links a.external-link-item:hover svg {
        opacity: 0.7; /* Contoh efek hover sederhana pada SVG */
    }

    @media (max-width: 720px) {
        .social-links {
            display: none;
        }
    }

    /* sr-only class untuk menyembunyikan teks secara visual tapi tetap bisa dibaca screen reader */
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }
</style>